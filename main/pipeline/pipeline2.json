{
	"name": "pipeline2",
	"properties": {
		"activities": [
			{
				"name": "Hive1",
				"type": "HDInsightHive",
				"dependsOn": [
					{
						"activity": "time",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"scriptPath": "hive1/Unnamed",
					"scriptLinkedService": {
						"referenceName": "AzureBlobStorage1",
						"type": "LinkedServiceReference"
					}
				},
				"linkedServiceName": {
					"referenceName": "linkedService1",
					"type": "LinkedServiceReference"
				}
			},
			{
				"name": "time",
				"type": "SetVariable",
				"typeProperties": {
					"variableName": "time",
					"value": {
						"value": "@utcnow()",
						"type": "Expression"
					}
				}
			}
		],
		"parameters": {
			"slice": {
				"type": "String",
				"defaultValue": "\"@trigger().scheduledTime\""
			}
		},
		"variables": {
			"time": {
				"type": "String",
				"defaultValue": "@variable('time')"
			}
		}
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}